<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="CircularProgress" parent="Theme.AppCompat.Light">
        <item name="colorAccent">@android:color/white</item>
    </style>

    <style name="SignUpFormLabelHint" parent="TextAppearance.Design.Hint">
        <item name="android:textColor">@color/white_op_50</item>
        <item name="android:layout_margin">@dimen/margin_16</item>
    </style>

    <style name="SignUpFormLabel">
        <item name="colorControlNormal">@color/input_field_underline_color</item>
        <item name="colorControlActivated">@color/input_field_underline_color</item>
        <item name="colorControlHighlight">@color/input_field_underline_color</item>
    </style>

</resources>
